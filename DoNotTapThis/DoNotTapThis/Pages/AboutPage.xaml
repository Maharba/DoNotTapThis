<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoNotTapThis.Pages.AboutPage"
             xmlns:circle="clr-namespace:CachedImageCircle.Forms.Plugin.Abstractions;assembly=CachedImageCircle.Forms.Plugin.Abstractions"
             Title="About" BackgroundColor="White">
  <StackLayout VerticalOptions="Center" Spacing="30">
    <StackLayout BackgroundColor="#FFFFFF">
      <circle:CircleCachedImage x:Name="circleImage" HorizontalOptions="Center" VerticalOptions="Center" Source="cursor_pointer_not.png"></circle:CircleCachedImage>
      <Label Text="DoNotTapThis" Style="{DynamicResource TitleStyle}" HorizontalTextAlignment="Center" TextColor="#1F1F1F"></Label>
    </StackLayout>
    <StackLayout>
      <Label Text="An app that consist of not tapping the screen." HorizontalTextAlignment="Center"></Label>
      <Label x:Name="lblMine" Text="LandoisApps © " HorizontalTextAlignment="Center"></Label>
    </StackLayout>
  </StackLayout>
</ContentPage>